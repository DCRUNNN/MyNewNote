                                                    <option>所有</option>
                                                    <% pageTags.forEach(function(pageTag){ %>
                                                        <option><%= pageTag.value %></option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                            <div class="col-md-1">
                                                <i type="button" class="fa fa-plus-square-o dropdown-toggle"
                                                   data-toggle="dropdown">
                                                    <span class="caret"></span>
                                                </i>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li>
                                                        <a data-toggle="modal" href="#addPageTagModal">
                                                            添加
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#" onclick="showDeletePageTagModal()">删除</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <table id="pageTable" class="table table-hover table-striped" style="text-align:center">
                                    <thead>
                                    <tr>
                                        <th style="text-align:center">笔记编号</th>
                                        <th style="text-align:center">笔记名称</th>
                                        <th style="text-align:center">所属笔记本</th>
                                        <th style="text-align: center">笔记标签</th>
                                        <th style="text-align:center">修改</th>
                                        <th style="text-align:center">查看</th>
                                        <th style="text-align:center">删除</th>
                                    </tr>
