                                        <tr>
                                            <td><%= page.pageID %></td>
                                            <td><%= page.title %></td>
                                            <td><%= page.notebookTitle %></td>
                                            <td><%= page.tag %></td>
                                            <td><a class="" data-toggle="modal" href="#modifyPageModal"
                                                   onclick="showModifyPageDialog('<%= page.pageID %>','<%= page.title %>','<%= page.tag %>')"><i
                                                            class="fa fa-edit"></i></a></td>
                                            <td><a class="" onclick="showPageContent('<%= page.pageID %>')"><i
                                                            class="fa fa-book"></i></a></td>
                                            <td><a class=""
                                                   onclick="setDataToDeletePageDialog('<%= page.pageID %>','<%= page.title %>')"><i
                                                            class="fa fa-close"></i></a></td>
                                        </tr>
                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

      <div id="context-menu">
