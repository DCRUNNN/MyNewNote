                                        <th style="text-align:center">笔记本名称</th>
                                        <th style="text-align:center">笔记本标签</th>
                                        <th style="text-align:center">修改</th>
                                        <th style="text-align:center">删除</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% note.forEach(function(note2){ %>
                                        <tr>
                                            <td><%= note2.notebookID %></td>
                                            <td><%= note2.title %></td>
                                            <td><%= note2.tag %></td>
                                            <td><a class="" data-toggle="modal" href="#modifyNotebookModal"
                                                   onclick="showModifyNotebookDialog('<%= note2.notebookID %>','<%= note2.title %>','<%= note2.tag %>')"><i
                                                            class="fa fa-edit"></i></a></td>
                                            <td><a class=""
                                                   onclick="setDataToDeleteNotebookDialog('<%= note2.notebookID %>','<%= note2.title %>')"><i
                                                            class="fa fa-close"></i></a></td>
                                        </tr>
                                    <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="page-pills">
                            <!--<h4>笔记标签管理</h4>-->
